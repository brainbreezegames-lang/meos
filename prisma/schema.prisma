generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  username      String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  desktop       Desktop?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Desktop {
  id                 String   @id @default(cuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  backgroundUrl      String?
  backgroundPosition String   @default("cover")
  backgroundOverlay  String?
  theme              String   @default("monterey")
  title              String?
  description        String?
  ogImageUrl         String?
  isPublic           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  items              DesktopItem[]
  dockItems          DockItem[]
}

model DesktopItem {
  id                 String   @id @default(cuid())
  desktopId          String
  desktop            Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  positionX          Float
  positionY          Float
  thumbnailUrl       String
  label              String
  windowTitle        String
  windowSubtitle     String?
  windowHeaderImage  String?
  windowDescription  String   @db.Text
  // Legacy fields (kept for backwards compatibility during migration)
  windowDetails      Json?
  windowGallery      Json?
  windowLinks        Json?
  // New block system
  useTabs            Boolean  @default(false)
  windowWidth        Int?     // Custom window width
  tabs               Tab[]
  blocks             Block[]  // Direct blocks when useTabs is false
  zIndex             Int      @default(0)
  order              Int      @default(0)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Tab {
  id        String   @id @default(cuid())
  itemId    String
  item      DesktopItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  label     String
  icon      String?
  order     Int      @default(0)
  blocks    Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Block {
  id        String   @id @default(cuid())
  // Parent can be either a DesktopItem (no tabs) or a Tab
  itemId    String?
  item      DesktopItem? @relation(fields: [itemId], references: [id], onDelete: Cascade)
  tabId     String?
  tab       Tab?     @relation(fields: [tabId], references: [id], onDelete: Cascade)
  type      String   // 'text', 'details', 'gallery', 'stats', etc.
  data      Json     // Block-specific data
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DockItem {
  id          String   @id @default(cuid())
  desktopId   String
  desktop     Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  icon        String
  label       String
  actionType  String
  actionValue String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
