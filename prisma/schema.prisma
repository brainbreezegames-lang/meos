generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  username      String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  desktop       Desktop?
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Desktop {
  id                 String   @id @default(cuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  backgroundUrl      String?
  backgroundPosition String   @default("cover")
  backgroundOverlay  String?
  theme              String   @default("monterey")
  title              String?
  description        String?
  ogImageUrl         String?
  isPublic           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  items              DesktopItem[]
  dockItems          DockItem[]
  statusWidget       StatusWidget?
  workbenchEntries   WorkbenchEntry[]
  emailCaptures      EmailCapture[]
}

// Email captures for gated content
model EmailCapture {
  id           String   @id @default(cuid())
  email        String
  desktopId    String
  desktop      Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  sourceFileId String?  // The file that triggered the capture
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([email, desktopId])
  @@index([desktopId])
}

model DesktopItem {
  id                 String   @id @default(cuid())
  desktopId          String
  desktop            Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  positionX          Float
  positionY          Float
  thumbnailUrl       String
  label              String
  windowTitle        String
  windowSubtitle     String?
  windowHeaderImage  String?
  windowDescription  String   @db.Text
  windowType         String?  // default, browser, mail, gallery, etc.
  // Legacy fields (kept for backwards compatibility during migration)
  windowDetails      Json?
  windowGallery      Json?
  windowLinks        Json?
  // New block system
  useTabs            Boolean  @default(false)
  windowWidth        Int?     // Custom window width
  tabs               Tab[]
  blocks             Block[]  // Direct blocks when useTabs is false
  zIndex             Int      @default(0)
  order              Int      @default(0)
  // Comments
  comments           Comment[]
  commentsEnabled    Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  // === goOS-specific fields ===
  // Item variant distinguishes meOS windows from goOS files
  itemVariant        String   @default("window")  // "window" | "goos-file"
  // goOS file type (only for goos-file variant)
  goosFileType       String?  // "note" | "case-study" | "folder"
  // Rich text content for goOS editor (TipTap HTML)
  goosContent        String?  @db.Text
  // Publication status for visibility control
  publishStatus      String   @default("draft")   // "draft" | "published"
  publishedAt        DateTime?
  // Hierarchical folder structure (self-referential)
  parentItemId       String?
  parentItem         DesktopItem?  @relation("FolderHierarchy", fields: [parentItemId], references: [id], onDelete: SetNull)
  children           DesktopItem[] @relation("FolderHierarchy")
  // Future: access control (Phase 3)
  accessLevel        String   @default("public")  // "public" | "locked"

  @@index([parentItemId])
  @@index([desktopId, publishStatus])
  @@index([desktopId, itemVariant])
}

model Tab {
  id        String   @id @default(cuid())
  itemId    String
  item      DesktopItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  label     String
  icon      String?
  order     Int      @default(0)
  blocks    Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Block {
  id        String   @id @default(cuid())
  // Parent can be either a DesktopItem (no tabs) or a Tab
  itemId    String?
  item      DesktopItem? @relation(fields: [itemId], references: [id], onDelete: Cascade)
  tabId     String?
  tab       Tab?     @relation(fields: [tabId], references: [id], onDelete: Cascade)
  type      String   // 'text', 'details', 'gallery', 'stats', etc.
  data      Json     // Block-specific data
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DockItem {
  id          String   @id @default(cuid())
  desktopId   String
  desktop     Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  icon        String
  label       String
  actionType  String
  actionValue String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Status Widget - "Available for" floating indicator
model StatusWidget {
  id          String   @id @default(cuid())
  desktopId   String   @unique
  desktop     Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  statusType  String   @default("available") // available, looking, taking, open, consulting
  title       String   @default("Available for work")
  description String?  @db.Text
  ctaUrl      String?
  ctaLabel    String?
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Workbench - Work-in-progress timeline entries
model WorkbenchEntry {
  id          String   @id @default(cuid())
  desktopId   String
  desktop     Desktop  @relation(fields: [desktopId], references: [id], onDelete: Cascade)
  title       String
  description String?  @db.Text
  imageUrl    String?
  context     String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isArchived  Boolean  @default(false)
  order       Int      @default(0)
}

// Comment system - Email-verified commenters
model Commenter {
  id          String    @id @default(cuid())
  email       String    @unique
  displayName String?
  verifiedAt  DateTime?
  createdAt   DateTime  @default(now())
  comments    Comment[]
}

// Email verification tokens for commenters
model CommentVerification {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  itemId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

// Comments on DesktopItems
model Comment {
  id             String      @id @default(cuid())
  itemId         String
  item           DesktopItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  commenterId    String
  commenter      Commenter   @relation(fields: [commenterId], references: [id], onDelete: Cascade)
  content        String      @db.Text
  category       String      @default("general") // general, feedback, question, appreciation
  parentId       String?
  parent         Comment?    @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies        Comment[]   @relation("CommentReplies")
  ownerReply     String?     @db.Text
  ownerRepliedAt DateTime?
  isPublic       Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([itemId])
  @@index([commenterId])
}
